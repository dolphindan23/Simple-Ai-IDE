{
  "id": "base-node",
  "name": "Node.js Base",
  "version": "1.0.0",
  "description": "Basic Node.js project scaffold with Express, TypeScript, and common tooling",
  "tags": ["node", "typescript", "express", "backend"],
  "extends": [],
  "variables": {
    "PROJECT_NAME": { "default": "my-app", "description": "Project name for package.json" },
    "PORT": { "default": "3000", "description": "Server port" }
  },
  "creates": {
    "files": [
      "package.json",
      "tsconfig.json",
      "src/index.ts",
      "src/routes/health.ts",
      ".env.example",
      ".gitignore",
      "Dockerfile",
      "docker-compose.yml"
    ]
  },
  "requiresSecrets": [],
  "capabilitiesPatch": {
    "services": {
      "node": { "enabled": true, "via": "native" }
    }
  },
  "postInstall": [
    { "type": "shell", "cmd": "npm install" }
  ],
  "guardrails": {
    "recommendedImmutable": [],
    "ports": [3000]
  }
}
